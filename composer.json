{
  "name": "makaronnik/amphp-rabbitmq-manager",
  "description": "PHP (8.1) Async Manager for RabbitMQ connection and consuming process. Wrapper over PHPinnacle Ridge",
  "homepage": "https://github.com/makaronnik/amphp-rabbitmq-manager",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "async",
    "rabbitmq",
    "manager",
    "phpinnacle",
    "ridge",
    "amphp"
  ],
  "authors": [
    {
      "name": "makaronnik",
      "email": "mkrnnk@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "amphp/amp": "v2.6.*",
    "kelunik/retry": "^v1",
    "phpinnacle/ridge": "1.3.*",
    "cspray/labrador-async-event": "^2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "friendsofphp/php-cs-fixer": "*",
    "amphp/phpunit-util": "^v2",
    "phpunit/phpunit": "^9.5",
    "vimeo/psalm": "^v4",
    "psalm/plugin-phpunit": "*",
    "dg/bypass-finals": "^1.3",
    "mockery/mockery": "^1.5",
    "psalm/plugin-mockery": "^0.9.1"
  },
  "config": {
    "process-timeout": 1800,
    "optimize-autoloader": true
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "Makaronnik\\RabbitManager\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Makaronnik\\RabbitManager\\Test\\": "test/"
    },
    "files": [
      "vendor/hamcrest/hamcrest-php/hamcrest/Hamcrest.php"
    ]
  },
  "scripts": {
    "code-style": "@php ./vendor/bin/php-cs-fixer fix --config=./.php-cs-fixer.dist",
    "test": "@php ./vendor/bin/phpunit"
  }
}
